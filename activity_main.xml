        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_above="@+id/image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
